<% posts.forEach(function(blog){ %>
    <h1><%= blog.title %></h1>
    <p>
        <%= blog.body.slice(0,100) + "..." %> 
        <% const link = "/post/" + blog.title %>
        <a href="<%=link%>">Read more</a>
    </p> 
    <% }) %>

